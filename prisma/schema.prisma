generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
}

model Session {
  id        String   @id
  sid       String   @unique
  data      String
  expiresAt DateTime

  @@map("sessions")
}

model User {
  id       Int     @id @default(autoincrement())
  email    String  @unique
  password String
  name     String?
  lastname String?

  folders Folder[]

  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt

  @@map("users")
}

model Folder {
  id   Int    @id @default(autoincrement())
  name String

  files File[]

  owner   User @relation(fields: [ownerId], references: [id])
  ownerId Int

  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt

  @@map("folders")
}

model File {
  id         Int      @id @default(autoincrement())
  name       String
  size       Int
  mime       String
  url        String
  uploadedAt DateTime @default(now())

  folder   Folder @relation(fields: [folderId], references: [id])
  folderId Int

  @@map("files")
}
