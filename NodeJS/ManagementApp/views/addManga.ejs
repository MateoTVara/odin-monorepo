<!DOCTYPE html>
<html lang="en">
<head>
  <meta charset="UTF-8">
  <meta name="viewport" content="width=device-width, initial-scale=1.0">
  <script type="module" src="/scripts/addManga.js" defer></script>
  <link rel="stylesheet" href="/styles/forms.css">
  <link rel="stylesheet" href="/styles/partials/dialogForm.css">
  <link rel="stylesheet" href="/styles/mangaForms.css">
  <title><%= title %></title>
</head>
<body>
  <%- include('partials/header') %>
  
  <main class="main-content">

    <h1><%= title %></h1>

    <%- include('partials/errors.ejs') %>

    <form class="form" action="/add" method="POST">

      <div class="form-group">
        <label for="title">Title</label>
        <input type="text" id="title" name="title" placeholder="Enter manga title" required>
      </div>

      <div class="form-group">
        <label for="description">Description</label>
        <textarea name="description" id="description" placeholder="Enter manga description"></textarea>
      </div>
      
      <select name="status" id="status" required>
        <% statuses.forEach(status => { %>
          <option><%= status %></option>
        <% }) %>
      </select>
      
      <div class="dates-selections">
        <div class="form-group">
          <label for="startdate">Start Date</label>
          <input type="date" id="startdate" name="startdate" required>
        </div>
        
        <div class="form-group">
          <label for="enddate">End Date</label>
          <input type="date" id="enddate" name="enddate">
        </div>
      </div>

      <div class="staff-roles-filters">

        <%- include('partials/filterDropdown', {
              inputId: 'staff',
              dataAttr: 'memberid',
              list: staff,
              displayProp: 'fullname',
              valueProp: 'id',
              containerClass: 'staff-buttons',
              placeholder: 'staff member'
        }) %>

        <%- include('partials/filterDropdown', {
              inputId: 'roles',
              dataAttr: 'roleid',
              list: roles,
              displayProp: 'title',
              valueProp: 'id',
              containerClass: 'roles-buttons',
              placeholder: 'role'
        }) %>

        <button class="add-staff-role" type="button">Add</button>
      </div>
      <ul class="assigned-staff-roles">
        <!-- Assigned staff and roles will appear here -->
      </ul>
      <input type="hidden" name="staff" value="">
      
      <div
        style="
          display: flex;
          flex-direction: row;
          gap: 16px;
        "
      >
        <%- include('partials/filterDropdown', {
              inputId: 'genres',
              dataAttr: 'genreid',
              list: genres,
              displayProp: 'title',
              valueProp: 'id',
              containerClass: 'genres-buttons',
              placeholder: 'genre'
        }) %>

        <button class="add-genre" type="button">Add</button>
      </div>
      <ul class="assigned-genres"></ul>
      <input type="hidden" name="genres" value="">

      
      <div class="actions">
        <a class="cancel" href="/">Cancel</a>
        <button class="submit" type="submit">Add Manga</button>
      </div>
    </form>

    <%- include('partials/dialogAddForm', {
      singular: 'staff',
      plural: 'staff',
      value: 'fullname', 
    }) %>

    <%- include('partials/dialogAddForm', {
      singular: 'role',
      plural: 'roles',
      value: 'title', 
    }) %>

    <%- include('partials/dialogAddForm', {
      singular: 'genre',
      plural: 'genres',
      value: 'title', 
    }) %>
  </main>
</body>
</html>