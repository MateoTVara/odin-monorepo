generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
}

model Session {
  id        String   @id
  sid       String   @unique
  data      String
  expiresAt DateTime

  @@map("sessions")
}

model User {
  id       Int     @id @default(autoincrement())
  email    String  @unique
  password String
  name     String?
  lastname String?

  entries Entry[]

  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt

  @@map("users")
}

model Entry {
  id   Int       @id @default(autoincrement())
  name String

  owner   User @relation(fields: [ownerId], references: [id])
  ownerId Int

  parent   Entry?  @relation("NodeChildren", fields: [parentId], references: [id], onDelete: Cascade)
  parentId Int?
  children Entry[] @relation("NodeChildren")

  folder Folder?
  file   File?

  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt

  @@map("entries")
}

model Folder {
  id   Int    @id

  entry Entry @relation(fields: [id], references: [id], onDelete: Cascade)

  @@map("folders")
}

model File {
  id         Int      @id
  size       Int
  mime       String
  url        String
  uploadedAt DateTime @default(now())

  entry Entry @relation(fields: [id], references: [id], onDelete: Cascade)

  @@map("files")
}
