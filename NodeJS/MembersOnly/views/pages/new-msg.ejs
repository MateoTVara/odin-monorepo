<%- include('../partials/header', { user }) %>

<main>
  <%- include('../partials/errors', { errors }) %>
  <div class="form-container">
    <h2 class="form-title">New Message</h1>
    <form action="/messages/add" method="POST" class="form">
      <div class="form-group">
        <label for="title">Title:</label>
        <input
          type="text"
          id="title"
          name="title"
          value="<%= typeof data !== 'undefined' ? data.title : '' %>"
          required
        >
      </div>
      <div class="form-group">
        <label for="message">Message:</label>
        <textarea
          id="message"
          name="message"
          required
        ><%= typeof data !== 'undefined' ? data.message.trim() : ''.trim() %></textarea>
      </div>
      <div class="actions">
        <a href="/" class="btn">Back to Home</a>
        <button type="submit" class="btn">Post Message</button>
      </div>
    </form>
  </div>
</main>