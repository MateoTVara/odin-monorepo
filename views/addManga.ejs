<!DOCTYPE html>
<html lang="en">
<head>
  <meta charset="UTF-8">
  <meta name="viewport" content="width=device-width, initial-scale=1.0">
  <script type="module" src="/scripts/addManga.js" defer></script>
  <title><%= title %></title>
  <style>
    form {
      display: flex;
      flex-direction: column;
      align-items: start;
      gap: 10px;
    }
  </style>
</head>
<body>

  <h1><%= title %></h1>

  <%- include('partials/errors.ejs') %>

  <form action="/add" method="POST">

    <label for="title">Title</label>
    <input type="text" id="title" name="title" required>

    <label for="description">Description</label>
    <textarea name="description" id="description"></textarea>
    
    <select name="status" id="status" required>
      <% statuses.forEach(status => { %>
        <option><%= status %></option>
      <% }) %>
    </select>
    
    <label for="startdate">Start Date</label>
    <input type="date" id="startdate" name="startdate" required>
    
    <label for="enddate">End Date</label>
    <input type="date" id="enddate" name="enddate">

    <div
      style="
        display: flex;
        flex-direction: row;
        gap: 16px;
      "
    >
      <%- include('partials/filterDropdown', {
            inputId: 'staff',
            dataAttr: 'memberid',
            list: staff,
            displayProp: 'fullname',
            valueProp: 'id',
            containerClass: 'staff-buttons'
      }) %>

      <%- include('partials/filterDropdown', {
            inputId: 'roles',
            dataAttr: 'roleid',
            list: roles,
            displayProp: 'title',
            valueProp: 'id',
            containerClass: 'roles-buttons'
      }) %>

      <button class="add-staff-role" type="button">Add</button>
    </div>
    <ul class="assigned-staff-roles">
      <!-- Assigned staff and roles will appear here -->
    </ul>
    <input type="hidden" name="staff" value="">
    
    <div
      style="
        display: flex;
        flex-direction: row;
        gap: 16px;
      "
    >
      <%- include('partials/filterDropdown', {
            inputId: 'genres',
            dataAttr: 'genreid',
            list: genres,
            displayProp: 'title',
            valueProp: 'id',
            containerClass: 'genres-buttons'
      }) %>

      <button class="add-genre" type="button">Add</button>
    </div>
    <ul class="assigned-genres">
      <!-- Assigned genres will appear here -->
    </ul>
    <input type="hidden" name="genres" value="">

    <button type="submit">Add Manga</button>
  </form>

  <a href="/">Back to Home</a>

</body>
</html>