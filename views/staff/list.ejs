<!DOCTYPE html>
<html lang="en">
<head>
  <meta charset="UTF-8">
  <meta name="viewport" content="width=device-width, initial-scale=1.0">
  <title><%= title %></title>
</head>
<body>
  <h1><%= title %></h1>
  <a href="/staff/add">Add New Staff Member</a>
  <ul>
    <% staff.forEach(function(member) { %>
      <li>
        <strong><%= member.fullname %></strong>
        <a href="/staff/<%= member.id %>/detail">View Details</a>
        <a href="/staff/<%= member.id %>/update">Update</a>
        <form action="/staff/<%= member.id %>/delete" method="POST">
          <button type="submit">Delete</button>
        </form>
      </li>
    <% }); %>
  </ul>
  <a href="/">Back to Home</a>
</body>
</html>